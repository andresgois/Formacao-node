<%- include('./partials/header.ejs'); %>
  <body>
    <%- include('./partials/navbar.ejs'); %>

    <div class="container">
    <br>

        <div>
          <div>
            <h5> <%= pergunta.titulo %>  </h5>
          </div>
          
          <div>
            <p> <%= pergunta.descricao %>  </p>
          </div>
          <hr>

          <form action="/responder" method="POST">
            <label for="resposta">Resposta</label>
            <textarea placeholder="Digite seu resposta" name="corpo" id="corpo" class="form-control"></textarea>
            <input type="hidden" name="pergunta" value="<%= pergunta.id %>">
            <br>
            <button type="submit" class="btn btn-primary">Responder</button>
          </form>
          <hr>
          <h3>Respostas</h3>
          <br>
          <% respostas.forEach(respo => { %>            
            <br>
            <div class="card">
              <div class="card-body">
                <p><%= respo.corpo %> </p>
              </div>
            </div>
          <% }) %> 
        </div>
     
    </div>
 
  </body>
  <%- include('./partials/footer.ejs'); %>